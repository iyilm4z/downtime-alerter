@using DowntimeAlerter.Web.Areas.Admin.Views.Shared.Components.Header
@using DowntimeAlerter.Web.Areas.Admin.Views.Shared.Components.Sidebar
@using DowntimeAlerter.Web.Areas.Admin.Views.Shared.Components.Footer
@{
    var pageTitle = !string.IsNullOrWhiteSpace(ViewBag.Title) ? ViewBag.Title + " / " : "";
    pageTitle += AppDefaults.AppName;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@pageTitle</title>

    <link rel="icon" type="image/png" href="~/lib/admin-lte/dist/img/AdminLTELogo.png"/>

    @await Html.PartialAsync("_AdminStyles.cshtml")
    @await RenderSectionAsync("Styles", false)
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    @(await Component.InvokeAsync<HeaderViewComponent>())
    @(await Component.InvokeAsync<SidebarViewComponent>())
    <div class="content-wrapper">
        @RenderBody()
    </div>
    @(await Component.InvokeAsync<FooterViewComponent>())
</div>
@await Html.PartialAsync("_AdminScripts.cshtml")
@await RenderSectionAsync("Scripts", false)
</body>
</html>