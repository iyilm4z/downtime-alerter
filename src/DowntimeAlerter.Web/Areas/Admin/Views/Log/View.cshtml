@model LogListDto
@{
    ViewData["Title"] = "Log View";
    ViewData["CurrentPage"] = PageNames.Logs;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <h1>
                    Log View
                    <span class="h6 px-2">
                        <i class="fa fa-arrow-circle-left"></i>
                        <a asp-action="List">Back to List</a>
                    </span>
                </h1>
            </div>
            <div class="col-6 text-right">
                <a class="btn bg-danger" asp-action="Delete" asp-route-id="@Model.Id">
                    <i class="fas fa-trash"></i>
                    Delete
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content px-2">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3 col-form-label">
                        LogLevel
                    </div>
                    <div class="col-md-9">
                        <div class="form-text-row">@Model.LogLevel</div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 col-form-label">
                        ShortMessage
                    </div>
                    <div class="col-md-9">
                        <div class="form-text-row">@Html.Raw(Model.ShortMessage)</div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3 col-form-label">
                        FullMessage
                    </div>
                    <div class="col-md-9">
                        <div class="form-text-row">@Html.Raw(Model.FullMessage)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>