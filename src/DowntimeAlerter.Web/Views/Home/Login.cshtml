@model DowntimeAlerter.Web.Models.Home.LoginModel
@{
    ViewBag.Title = "Login";
}

<h4 class="text-center mb-3">Log In</h4>
<form asp-route="Login" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post" autocomplete="off">
    <div asp-validation-summary="ModelOnly"></div>

    @if (Model.UsernamesEnabled)
    {
        <div class="form-group row required">
            <div class="col-lg-12">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Username" asp-for="Username">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Username"></span>
            </div>
        </div>
    }
    else
    {
        <div class="form-group row required">
            <div class="col-lg-12">
                <div class="input-group">
                    <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
    }

    <div class="form-group row">
        <div class="col-lg-12">
            <div class="input-group">
                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-8">
            <div class="form-check d-inline">
                <input type="checkbox" class="form-check-input mt-2" asp-for="RememberMe" />
                <label asp-for="RememberMe">Remember Me?</label>
            </div>
        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div>
    </div>
</form>